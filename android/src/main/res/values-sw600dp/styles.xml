<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Intermediary theme for NewsReader, this allows us to make a floating window -->
    <style name="Theme.One.NewsReader.Base" parent="FrameworkRoot.Theme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.One.NewsReader" parent="Theme.One.NewsReader.Base" />
</resources>
