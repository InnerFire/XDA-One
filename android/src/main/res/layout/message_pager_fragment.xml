<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize">

    <com.xda.one.ui.widget.TabLayout
        android:id="@+id/pager_tab_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_layout_background_color"
        android:elevation="@dimen/toolbar_elevation" />

    <com.xda.one.ui.widget.NonSwipeableViewPager
        android:id="@+id/message_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pager_tab_strip"
        android:layout_marginTop="?android:attr/actionBarSize" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/message_fragment_action_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:clickable="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/create"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="6dp"
        app:borderWidth="0dp" />
</android.support.design.widget.CoordinatorLayout>